<?xml version="1.0" encoding="ISO-8859-1"?>
<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd http://www.exoplatform.org/xml/ns/kernel_1_2.xsd"
               xmlns="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd">
    <component>
        <key>org.exoplatform.training.service.TrainingService</key>
        <type>org.exoplatform.training.service.TrainingServiceImpl</type>
    </component>
    <external-component-plugins>
        <target-component>org.exoplatform.training.service.TrainingService</target-component>
        <component-plugin>
            <name>Text transformer to Upper case plugin</name>
            <set-method>addPlugin</set-method>
            <type>org.exoplatform.training.service.plugins.UpperCase</type>
            <description>This plugin transforms text to uppercase and then prints it in Log file</description>
        </component-plugin>
    </external-component-plugins>
    <external-component-plugins>
        <target-component>org.exoplatform.services.listener.ListenerService</target-component>
        <component-plugin>
            <name>text-transformed</name>
            <set-method>addListener</set-method>
            <type>org.exoplatform.training.service.listener.TextTransformListener</type>
            <description>This listener will log when a plugin do a text transformation</description>
        </component-plugin>
    </external-component-plugins>
    <external-component-plugins>
        <target-component>org.exoplatform.services.scheduler.JobSchedulerService</target-component>
        <component-plugin>
            <name>QuotePrinterJob</name>
            <set-method>addPeriodJob</set-method>
            <type>org.exoplatform.services.scheduler.PeriodJob</type>
            <description>Job to print random quotes</description>
            <init-params>
                <properties-param>
                    <name>job.info</name>
                    <description>details of the execution of the Quotes printer job</description>
                    <property name="jobName" value="QuotePrinter"/>
                    <property name="groupName" value="QuotePrinters"/>
                    <property name="job" value="org.exoplatform.training.service.scheduledjobs.PrintQuoteJob"/>
                    <property name="repeatCount" value="0"/>
                    <property name="period" value="${exo.dlp.job.period:30000}"/><!-- default 30 seconds -->
                    <property name="startTime" value="+15000"/><!-- start after 15 seconds delay -->
                    <property name="endTime" value=""/>
                </properties-param>
            </init-params>
        </component-plugin>
    </external-component-plugins>
</configuration>
